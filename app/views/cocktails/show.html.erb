<div class="container">

    <h2><%= @cocktail.name %></h2>

    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <div class="content">

    <% @cocktail.doses.each do |dose| %>
    <p><%= dose.ingredient.name %></p>
    <p><%= dose.description %></p>
    <p><%= link_to "Delete doses", dose_path(dose), method: :delete  %></p>
    <% end %>
  </div>
  <p><%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete  %></p>
  <p><%= link_to "Home", cocktails_path, class: "btn btn-primary" %></p>

</div>





